rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Scores collection
    match /scores/{scoreId} {
      // Anyone can read scores (needed for leaderboards)
      allow read: if true;
      
      // Only authenticated users can create scores
      // User ID in score must match authenticated user
      // Score must be a positive number
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.score is number
                    && request.resource.data.score >= 0
                    && request.resource.data.timeSeconds is number
                    && request.resource.data.timeSeconds >= 0
                    && request.resource.data.gameId in ['match-master', 'timeline', 'trivia-rush'];
      
      // Scores are immutable - no updates or deletes allowed
      allow update, delete: if false;
    }
    
    // Progress collection (for saving game state)
    match /progress/{progressId} {
      // Users can only read/write their own progress
      // Document ID format: {userId}_{gameId}
      allow read: if isAuthenticated() 
                  && progressId.matches('^' + request.auth.uid + '_.*$');
      
      allow write: if isAuthenticated()
                   && progressId.matches('^' + request.auth.uid + '_.*$')
                   && request.resource.data.userId == request.auth.uid
                   && request.resource.data.gameId in ['match-master', 'timeline', 'trivia-rush'];
    }
    
    // User stats collection (optional - for aggregate data)
    match /users/{userId} {
      // Users can read their own stats, platform team can read all
      allow read: if isAuthenticated() && (isOwner(userId) || isPlatformTeam());
      
      // Users can only write to their own stats
      allow write: if isAuthenticated() && isOwner(userId);
    }
    
    // Platform team check (optional - add platform team member UIDs here)
    function isPlatformTeam() {
      // Add UIDs of platform team members for admin access
      // return request.auth.uid in ['uid1', 'uid2', 'uid3'];
      return false; // Disabled by default
    }
  }
}
